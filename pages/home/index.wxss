/* 全局样式 */
.container {
  height: 100vh;
  overflow: hidden;
}

.scroll-view {
  height: 100%;
}

.screen {
  height: 100vh;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content {
  text-align: center;
  color: #000;
  opacity: 0;
  transform: translateY(20px);
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.description {
  font-size: 15px;
  line-height: 20px;
}
